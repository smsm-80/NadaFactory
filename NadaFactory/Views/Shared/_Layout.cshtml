<!-- Views/Shared/_Layout.cshtml (ScrollSpy enabled) -->
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Kufi+Arabic:wght@400;700&display=swap" rel="stylesheet">

    <link href="~/css/optimized.css" rel="stylesheet" />
    <link href="~/css/Class.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* تأكد من سلاسة التمرير وإبراز الرابط النشط */
        html {
            scroll-behavior: smooth;
        }

        .navbar .nav-link.active {
            color: #fff !important;
        }

        .navbar .nav-link {
            opacity: .85;
        }

            .navbar .nav-link.active,
            .navbar .nav-link:hover {
                opacity: 1;
            }
    </style>
</head>
<body data-bs-spy="scroll" data-bs-target="#navbarNav" data-bs-offset="90" tabindex="0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#intro">ندى للأخشاب</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#about">المقدمة</a></li>
                    <li class="nav-item"><a class="nav-link" href="#factory">عن المصنع</a></li>
                    <li class="nav-item"><a class="nav-link" href="#products">المنتجات</a></li>
                    <li class="nav-item"><a class="nav-link" href="#tech">التقنيات</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">تواصل معنا</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- مهم: اجعل المحتوى التالي بعد الهيدر الثابت؛ أضف مسافة علوية -->
    <main class="mt-5 pt-4 position-relative">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // تفعيل ScrollSpy على body (بديل للسمة على <body> إذا رغبت)
        const scrollSpy = bootstrap.ScrollSpy.getOrCreateInstance(document.body, {
            target: '#navbarNav',
            offset: 90
        });

        // إغلاق القائمة تلقائيًا بعد النقر في الشاشات الصغيرة
        document.querySelectorAll('.navbar .nav-link').forEach(function (link) {
            link.addEventListener('click', function () {
                const nav = document.getElementById('navbarNav');
                const bsCollapse = bootstrap.Collapse.getOrCreateInstance(nav);
                bsCollapse.hide();
            });
        });

        // إصلاح: عند التحميل اذهب إلى القسم في الهاش مع مراعاة الهيدر الثابت
        window.addEventListener('load', function () {
            if (window.location.hash) {
                const el = document.querySelector(window.location.hash);
                if (el) {
                    const top = el.getBoundingClientRect().top + window.pageYOffset - 80; // ارتفاع الهيدر
                    window.scrollTo({ top, behavior: 'smooth' });
                }
            }
        });
    </script>
</body>
</html>
